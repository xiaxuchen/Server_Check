<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cxyz.check.dao.SchoolDao">

    <select id="getCurrentTermId" resultType="Integer">
        SELECT
        `term.id`
        FROM tb_school
        WHERE id=#{schoolId};
    </select>

    <insert id="addSchool" parameterType="School" useGeneratedKeys="true" keyProperty="school.id">
        INSERT INTO
        tb_school(name,manager_id,manager_pwd)
        VALUES (#{school.name},#{school.managerId},#{school.managerPwd})
    </insert>

    <update id="updateSchool">
        UPDATE tb_school
        <set>
            <if test="school.name!=null">name = #{school.name},</if>
            <if test="school.managerPwd!=null">manager_pwd = #{school.managerPwd},</if>
            <if test="school.term!=null">`term.id` = #{school.term.id}</if>
        </set>
        WHERE id=#{school.id}
    </update>

    <delete id="deleteSchool" parameterType="int">
        DELETE FROM tb_school WHERE id=#{id}
    </delete>

    <select id="getSchools" resultType="School">
        SELECT * FROM
        tb_school
        <if test="field != null">
            ORDER BY ${field}
            <choose>
                <when test="isAsc">ASC </when>
                <otherwise>DESC </otherwise>
            </choose>
        </if>
    </select>

    <select id="getManager" parameterType="String" resultType="School">
        SELECT manager_pwd
        FROM tb_school
        WHERE manager_id=#{id}
    </select>

</mapper>