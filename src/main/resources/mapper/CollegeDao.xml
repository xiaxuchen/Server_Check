<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cxyz.check.dao.CollegeDao">

    <select id="isUserImportEnable" resultType="boolean">
        SELECT user_import
        FROM tb_college
        WHERE id=#{collegeId}
    </select>

    <select id="isLessonImportEnable" resultType="boolean">
        SELECT lesson_import
        FROM tb_college
        WHERE id=#{collegeId}
    </select>

    <update id="toggleUserImport">
        UPDATE tb_college SET user_import=CASE WHEN user_import=TRUE THEN FALSE ELSE TRUE END WHERE id=#{collegeId};
    </update>

    <update id="toggleLessonImport">
        UPDATE tb_college SET lesson_import=CASE WHEN lesson_import=TRUE THEN FALSE ELSE TRUE END WHERE id=#{collegeId};
    </update>

    <insert id="addCollege" useGeneratedKeys="true" keyProperty="college.id">
        INSERT INTO
        tb_college(name,`school.id`)
        VALUES (#{college.name},#{schoolId})
    </insert>

    <update id="updateCollege" parameterType="College">
        UPDATE tb_college
        <set>
            <if test="college.name!=null">name = #{college.name},</if>
            <if test="college.manager!=null">`manager.id` = #{college.manager.id},</if>
        </set>
        WHERE id=#{college.id}
    </update>

    <delete id="deleteCollege" parameterType="int">
        DELETE FROM tb_college WHERE id=#{id}
    </delete>

</mapper>
