<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cxyz.check.dao.GradeDao">

    <select id="getGradeSchoolId" resultType="Integer">
        SELECT
        s.id
        FROM tb_school s ,tb_college c,tb_grade g
        WHERE g.`college.id` = c.id
        AND c.`school.id` = s.id
        AND g.id=#{gradeId}
    </select>

    <select id="getCollegeGrades" resultType="GradeDto">
        SELECT
        id,name
        FROM tb_grade
        WHERE `college.id`=#{collegeId}
    </select>

    <select id="getGradeName" resultType="java.lang.String">
        SELECT
        name
        FROM tb_grade
        WHERE id=#{gradeId}
    </select>

</mapper>